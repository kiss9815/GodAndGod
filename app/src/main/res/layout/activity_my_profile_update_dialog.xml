<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="#FFFFFF"
    tools:context="com.juntcompany.godandgod.Dialog.MyProfileUpdateDialog">

    <TableRow
        android:id="@+id/table1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/profileimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/noimage" />


        <TextView
            android:textAlignment="center"
            android:id="@+id/infoPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view"
            android:layout_centerHorizontal="true"
            android:text="프로필 보기"
            android:textColor="#90909090"
            android:textSize="15dp" />

    </TableRow>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/table1"
        android:background="#000000" />

    <TableRow
        android:id="@+id/table2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:gravity="center">

        <ImageView
            android:id="@+id/profileimage2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/camera" />

        <TextView
            android:id="@+id/updatePicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="프로필 사진 수정하기"
            android:textColor="#90909090"
            android:textSize="15dp" />


    </TableRow>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/table2"
        android:background="#000000" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:id="@+id/introduce"
        android:gravity="center"
        android:onClick="onClick">

        <ImageView
            android:id="@+id/profileimage3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/star" />

        <TextView
            android:id="@+id/updateIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view"
            android:layout_centerHorizontal="true"
           android:textAlignment="center"
            android:text="내 소개 수정하기"
            android:textColor="#90909090"
            android:textSize="15dp" />


    </TableRow>


</RelativeLayout>
