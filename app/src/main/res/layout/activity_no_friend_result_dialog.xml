<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="#FFFFFF"
    tools:context="com.juntcompany.godandgod.Dialog.NoFriendResultDialog">

    <TextView
        android:id="@+id/nofriendtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="메세지를 보낼수 없습니다."
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nofriendtext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nofriendtext"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="친구가 아니면 메세지를 보낼수 없습니다." />

    <TextView
        android:id="@+id/nofriendtext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nofriendtext2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:text="소통을 하려면 친구 추가를 해주세요" />

    <TextView
        android:id="@+id/textOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nofriendtext3"
        android:layout_marginRight="20dp"
        android:text="확인"
        android:layout_marginBottom="10dp"
        android:textColor="#043623"
        android:textStyle="bold" />
</RelativeLayout>
