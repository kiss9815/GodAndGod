<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:id="@+id/chatGroupChattingRoomYou"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/chatGroupChattingRoomYouPic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/chatGroupChattingRoomYouName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/chatGroupChattingRoomYouText"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/buttonstyle1"
                 />
        </TableLayout>
    </TableRow>

    <RelativeLayout
        android:id="@+id/chatGroupChattingRoomMe"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/chatGroupChattingRoomMeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:background="@drawable/buttonstyle2"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

</TableRow>
