<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juntcompany.godandgod.Login.LoginHelper.HelperCodeInputFragment">

    <TableRow
        android:id="@+id/tableRow9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">

        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:text="다음"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="번호로 SMS가 전송되었습니다."
            android:textSize="17dp"
            android:textStyle="bold" />

    </TableRow>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableRow9"
        android:gravity="center"
        android:text="전송된 코드를 여기에 입력하세요."
        android:textSize="17dp"
        android:textStyle="bold" />

    <EditText
        android:id="@id/idText"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="코드 입력"
        android:inputType="phone"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonstyle1"
        android:text="다음"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_below="@id/idText"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/recode"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="코드 다시 받기"
        android:background="@drawable/buttonstyle2"
        android:textColor="#000000"
        android:layout_below="@+id/buttonNext"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/emailrecode"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonstyle2"
        android:text="이메일로 코드 받기"
        android:textColor="#000000"
        android:layout_below="@+id/recode"
        android:layout_marginTop="20dp" />



</RelativeLayout>
