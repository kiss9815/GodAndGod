<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_margin="2dp"
            android:id="@+id/groupNum1"
            >

            <TableLayout
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/chatLeftGroupPicture"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                   />
                <TextView
                    android:id="@+id/chatLeftGroupName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_marginTop="13dp"
                    android:layout_height="1dp"
                    android:background="#90909090" />
                <TextView
                    android:layout_marginTop="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chatLeftGroupUser"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
            </TableLayout>
        </TableLayout>

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_margin="2dp"
            android:id="@+id/groupNum2"
            >


            <TableLayout
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/chatRightGroupPicture"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    />
                <TextView
                    android:id="@+id/chatRightGroupName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_marginTop="13dp"
                    android:layout_height="1dp"
                    android:background="#90909090" />
                <TextView
                    android:layout_marginTop="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chatRightGroupUser"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
            </TableLayout>
        </TableLayout>
    </TableRow>

</TableLayout>
