<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juntcompany.godandgod.Login.LoginHelper.HelperMainFragment">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text="비밀번호 재설정"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/serachemail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:gravity="left|center"
            android:text="이메일 주소로 찾기"
            android:textStyle="bold"
            android:textSize="15dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#90909090" />

        <TextView
            android:id="@+id/serachphone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:gravity="left|center"
            android:text="휴대폰 번호로 찾기"
            android:onClick="helperclock"
            android:textStyle="bold"
            android:textSize="15dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#90909090" />
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableLayout2"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text="고객 센터"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:gravity="left|center"
            android:text="GoD 고객 센터"
            android:textStyle="bold"
            android:textSize="15dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#90909090" />
    </TableLayout>

</RelativeLayout>
