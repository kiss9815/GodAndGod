
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="#FFFFFF"
    tools:context="com.juntcompany.godandgod.Dialog.MyStoryContentCancelDialog">

    <TextView
        android:id="@+id/textdelet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="내용을 삭제하시나요?"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textdelet2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textdelet"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="뒤로 가면 작성중인 내용이 삭제됩니다."
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textdelet3"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="취소"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/textdelet2"
        android:layout_alignRight="@+id/textdelet2"
        android:layout_alignEnd="@+id/textdelet2"
        android:layout_marginRight="1dp"/>

    <TextView

        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="삭제"
        android:textColor="#043623"
        android:textStyle="bold"
        android:layout_below="@+id/textdelet2"
        android:layout_toRightOf="@+id/textdelet3"
        android:layout_toEndOf="@+id/textdelet3" />

</RelativeLayout>
