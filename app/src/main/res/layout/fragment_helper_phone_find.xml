<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juntcompany.godandgod.Login.LoginHelper.HelperPhoneFindFragment">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/helperspinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:entries="@array/nation"
            android:gravity="center"
            android:spinnerMode="dropdown" />

        <RelativeLayout android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/nationNum"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15dp" />



            <EditText
                android:id="@+id/editText2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@null"
                android:ems="10"
                android:hint="휴대폰 번호"
                android:inputType="phone"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/nationNum"
                android:layout_toEndOf="@+id/nationNum" />


        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="계정 검색하려면 회원가입 휴대폰번호를 입력하세요."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />
    </TableLayout>


</RelativeLayout>
