<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Main.Love.LoveFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/searchUserPicture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp" />


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/searchUserPicture"

            android:layout_toRightOf="@+id/searchUserPicture"
            android:gravity="center_vertical"
            android:id="@+id/tableLayout5">


            <TextView
                android:id="@+id/searchUserName"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="GnD"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/searchUserReligion"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="종교"
                android:textSize="15dp" />

        </TableLayout>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:text="X"
            android:textSize="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>


</RelativeLayout>
